@using IdentityServer.ViewModels.Shared
@model IdentityServer.Areas.Manager.Models.ProfileViewModel

@{
    ViewData["ActivePage"] = TitleViewModel.Profile.Title;
    ViewData["Title"] = TitleViewModel.Profile.Title;
    
    Layout = "_ManageLayout";
}

<form method="post">

    <partial name="_StatusMessage" for="@ViewData["StatusMessage"]"/>

    <div class="form-group">
        <label asp-for="Username"></label>
        <input asp-for="Username" class="form-control"/>
        <span asp-validation-for="Username" class="text-danger"></span>
    </div>
    
    <div class="form-group">
        <label asp-for="GivenName"></label>
        <input asp-for="GivenName" class="form-control"/>
        <span asp-validation-for="GivenName" class="text-danger"></span>
    </div>
    
    <div class="form-group">
        <label asp-for="FamilyName"></label>
        <input asp-for="FamilyName" class="form-control"/>
        <span asp-validation-for="FamilyName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="PhoneNumber"></label>

        <div class="input-group">
            <input asp-for="PhoneNumber" class="form-control"/>
            @if (Model?.PhoneNumberConfirmed ?? false)
            {
                <div class="input-group-append" data-toggle="tooltip" data-placement="left" title="Verificato">
                    <span class="input-group-text text-success font-weight-bold">✓</span>
                </div>
            }
            else
            {
                <div class="input-group-append" data-toggle="tooltip" data-placement="left" title="Non Verificato">
                    <span class="input-group-text text-danger font-weight-bold">X</span>
                </div>
            }
        </div>

        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
    </div>

    <div class="text-right">
        <button type="submit" class="btn btn-outline-primary w-25">Aggiorna</button>
    </div>
</form>