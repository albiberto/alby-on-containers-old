@using IdentityServer.ViewModels.Shared
@model IdentityServer.ViewModels.Passwords.ResetPasswordViewModel

@{
    ViewData["Title"] = TitleViewModel.ResetPassword.Title;
    Layout = "_Layout";
}

<partial name="_Title" model="TitleViewModel.ResetPassword"/>

<form class="form-horizontal" method="post" asp-route-returnurl="@ViewData["ReturnUrl"]">

    <partial name="_ValidationSummary"/>

    <div class="form-group">
        <label asp-for="Email"></label>
        <input asp-for="Email" class="form-control"/>
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Password"></label>
        <input asp-for="Password" class="form-control"/>
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="ConfirmPassword"></label>
        <input asp-for="ConfirmPassword" class="form-control"/>
        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
    </div>

    <input asp-for="Code" type="hidden"/>

    <button type="submit" class="btn btn-outline-primary w-25">Reset</button>

</form>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}